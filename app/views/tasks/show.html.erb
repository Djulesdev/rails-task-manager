<h2><%= @task.title %></h2>

<%= link_to "🔃 Edit a task", edit_task_path(@task) %>

<p><%= @task.details %></p>

<p>
    <%if @task.completed %>
    <%= "👍🏼" "this task is completed!" %>
    <% else %>
    <%= "❌" "this task is not done yet !" %>
    <% end %>
</p>

<%= link_to "Back to list", tasks_path%>
